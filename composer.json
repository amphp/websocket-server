{
    "name": "amphp/websocket-server",
    "homepage": "https://github.com/amphp/websocket-server",
    "description": "Websocket server for Amp's HTTP server.",
    "keywords": [
        "http",
        "server",
        "websocket"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Lowrey",
            "email": "rdlowrey@php.net"
        },
        {
            "name": "Bob Weinand"
        },
        {
            "name": "Niklas Keller",
            "email": "me@kelunik.com"
        },
        {
            "name": "Aaron Piotrowski",
            "email": "aaron@trowski.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "amphp/amp": "^3",
        "amphp/byte-stream": "^2",
        "amphp/http": "^2",
        "amphp/http-server": "^3",
        "amphp/socket": "^2",
        "amphp/websocket": "^2",
        "psr/log": "^1|^2|^3",
        "revolt/event-loop": "^1"
    },
    "require-dev": {
        "amphp/http-client": "^5-dev",
        "amphp/http-server-static-content": "^2",
        "amphp/http-server-router": "^2",
        "amphp/log": "^2",
        "amphp/php-cs-fixer-config": "^2",
        "amphp/phpunit-util": "^3",
        "amphp/websocket-client": "^2-dev",
        "league/climate": "^3",
        "phpunit/phpunit": "^9",
        "psalm/phar": "^5.4",
        "colinodell/psr-testlogger": "^1.2"
    },
    "suggest": {
        "ext-zlib": "Required for compression"
    },
    "autoload": {
        "psr-4": {
            "Amp\\Websocket\\Server\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Amp\\Websocket\\Server\\": "test"
        }
    },
    "scripts": {
        "check": [
            "@code-style",
            "@test"
        ],
        "code-style": "php-cs-fixer fix -v --diff",
        "test": "@php -dzend.assertions=1 -dassert.exception=1 ./vendor/bin/phpunit --coverage-text"
    }
}
